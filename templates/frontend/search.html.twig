{% extends 'base.html.twig' %}

{% block content %}
<form>
    <div>
        <label for="name">Rechercher par nom :</label>
        <input type="search" id="name" name="name" value="{{ app.request.query.get('name') }}" />
    </div>
    <div>
        <button>Rechercher</button>
    </div>
</form>


{% if books is empty %}
    <p>Il n'y a aucun livres qui correspond à votre recherche :(</p>
{% endif %}

{% for book in books %}
    <div>
        <p>{{ book.name }}</p>
        <p>Prix : {{ book.price }} €</p>
        <a href="{{ path('app_frontend_displayBook', {id: book.id}) }}">Voir le livre</a>
    </div>
{% endfor %}

{% endblock %}
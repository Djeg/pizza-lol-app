{% extends 'front/front.html.twig' %}

{% block title %}Library Shop - Accueil{% endblock %}

{% block content %}
<h1>Accueil</h1>

<p>
Bienvenue sur Library Shop, le site de vente de livres entre particuliers.
</p>

<h2>Les derniers livres</h2>

<div class="grid">
    {% for book in books %}
        {% include 'front/partials/_bookThumb.html.twig' %}
    {% endfor %}
</div>

<h2>Les derniers auteurs</h2>

<div class="grid">
    {% for author in authors %}
        <a class="thumb book" href="{{ path('app_front_author_show', { id: author.id, slug: author.slug }) }}">
            <img src="{{ author.image }}" alt="{{ author.firstname }} {{ author.lastname }}" />
            <p>{{ author.firstname }} {{ author.lastname }}</p>
        </a>
    {% endfor %}
</div>

<h2>Les dernieres cat√©gories</h2>

<div class="grid">
    {% for category in categories %}
        <a class="thumb book" href="{{ path('app_front_book_search', { category: category.title }) }}">
            <p>{{ category.title }}</p>
        </a>
    {% endfor %}
</div>
{% endblock %}

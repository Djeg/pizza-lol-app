{% extends 'base.html.twig' %}

{% block title %}Liste des pizzas{% endblock %}

{% block body %}

<h1>Liste des pizzas</h1>

<a href="{{ path('app_admin_pizza_create')}}">Créer une nouvelle pizza</a>

{% for item in data %}
    <div>
        <p>La pizza {{ item.pizza.name }} est a {{ item.pizza.price }} €</p>
        <a href="{{ path('app_admin_pizza_update', { id: item.pizza.id }) }}">Modifier cette pizza</a>
        {{ form(item.form) }}
    </div>
{% endfor %}
{% endblock %}

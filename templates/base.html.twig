<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/main.js') }}"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block header %} 
                <header class="app--header">
                    <nav class="app--menu">
                        {% block menu %}
                            <div class="app--menu--item">
                                <a href="{{ path('app_frontend_home_index') }}">
                                    Accueil
                                </a>
                            </div>

                            <div class="app--menu--item">
                                <a href="{{ path('app_frontend_book_search') }}" class="app--menu--item">
                                    Rechercher
                                </a>
                            </div>

                            {% if app.user %}
                                <div class="app--menu--item">
                                    <a href="{{ path('app_frontend_basket_index') }}" class="app--menu--item">
                                        Panier ({{ app.user.basket.books|length }})
                                    </a>
                                </div>
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="app--menu--item">
                                    <a href="{{ path('app_admin_book_index') }}" class="app--menu--item">
                                        Administration
                                    </a>
                                </div>
                            {% endif %}
                        {% endblock %}
                    </nav>
                </header>
            {% endblock %}

            <div class="app--content">
                {% block content '' %}
            </div>

            <footer class="app--footer">
                {% block footer '' %}
            </footer>
        {% endblock %}
    </body>
</html>

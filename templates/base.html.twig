<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Pizzeria{% block subTitle %}{% endblock %}
            {% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block menu %}
                <nav>
                    <a href="{{ path('app_home_home') }}">Accueil</a>
                    <a href="{{ path('app_pizza_search') }}">Rechercher</a>
                    <a href="{{ path('app_pizza_create') }}">Ajouter une pizza</a>
                    <a href="{{ path('app_pizza_display', {id: 4}) }}">Afficher pizza</a>
                </nav>
            {% endblock %}
        
            {% block content %}{% endblock %}
        {% endblock %}
    </body>
</html>
